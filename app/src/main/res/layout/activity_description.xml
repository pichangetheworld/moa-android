<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="32dp"
        android:paddingStart="32dp"
        android:paddingRight="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:id="@+id/article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/article_date"
            android:gravity="end"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/tags"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag1"
                android:background="#ffc6c6c6"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag2"
                android:background="#ffc6c6c6"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/heart"
            android:drawableStart="@drawable/heart"
            android:text="@string/count_ten"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/index1"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/image_placeholder" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_placeholder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comments_placeholder" />

        <LinearLayout
            android:id="@+id/related_products"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="12dp">

            <com.pichangetheworld.moasample.view.CustomImageView
                android:src="@drawable/gucci_bag_256"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp" />
            <com.pichangetheworld.moasample.view.CustomImageView
                android:src="@drawable/gucci_bag_256"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp" />
            <com.pichangetheworld.moasample.view.CustomImageView
                android:src="@drawable/gucci_bag_256"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp" />
            <com.pichangetheworld.moasample.view.CustomImageView
                android:src="@drawable/gucci_bag_256"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/magazine_name"
            android:textSize="32sp"
            android:background="#ff5f5f5f"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended_articles"
            android:background="#ff808080"
            android:textColor="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <LinearLayout
            android:id="@+id/recommended_articles"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index10"/>
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index11"/>
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index12"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/archive"
            android:background="#ff808080"
            android:textColor="#ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <LinearLayout
            android:id="@+id/archived_articles"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index7"/>
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index8"/>
            <com.pichangetheworld.moasample.view.CustomImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/index9"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>